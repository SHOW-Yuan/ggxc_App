
page{
	background-color: #F8F8F8;
}
.box {
	padding: 30rpx 30rpx 0;
}
/* 信息区域 */
.header-info,
.bottom-list{
	padding: 30rpx;
	border-radius: 20rpx;
	background-color: #FFFFFF;
	-webkit-box-shadow: 0 4rpx 30rpx #ebedf0;
	        box-shadow: 0 4rpx 30rpx #ebedf0;
	margin-bottom: 30rpx;
}
.bottom-list {
	padding: 0 20rpx 20rpx;
}
.header-one {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	padding-bottom: 16rpx;
}
.header-one view:nth-child(1){
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.header-one view:nth-child(1) image {
	width: 40rpx;
	height: 34rpx;
	display: block;
	margin-right: 6rpx;
}
.header-one view:nth-child(1) text {
	font-size: 24rpx;
	color: #a1a1a1;
}
.header-one view:nth-child(2) {
	color: rgba(0,0,0,.87);
	font-size: 24rpx;
}
.header-two {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.header-two view:nth-child(1) image{
	width: 130rpx;
	height: 130rpx;
	margin-right: 20rpx;
}
.header-two-right view:nth-child(1) text:nth-child(1){
	font-size: 32rpx;
	font-weight: 700;
	margin-right: 10rpx;
}
.header-two-right view:nth-child(1) text:nth-child(2){
	font-size: 24rpx;
	color: #FFFFFF;
	background-color: #7ad5c3;
	padding: 0 6rpx;
}
.header-two-right view:nth-child(2) {
	font-size: 24rpx;
	color: rgba(0,0,0,.87);
}
/* 排班模块 */
/* tab */
.my-tab {
	width: 100%;
	text-align: center;
	font-size: 32rpx;
}
.date-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	padding-top: 30rpx;
}
.date-list>view {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.date-list>view text:nth-child(1) {
	font-size: 24rpx;
	font-weight: 700;
}
.date-list>view text:nth-child(2) {
	font-size: 24rpx;
	color: rgba(0,0,0,.87);
	padding-bottom: 18rpx;
	padding-top: 4rpx;
}
.date-list>view .isFlag {
	color: orange!important;
	border-bottom: 2rpx solid orange;
}
.date-list-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-flex-wrap: wrap;
	    -ms-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding-top: 30rpx;
}
.pad-rig {
	width: 33%;
	padding: 0px 6px;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-bottom: 6px;
}
.item-list {
	font-size: 24rpx;
	width: 100%;
	border: 2rpx solid #ccc;
	border-radius: 20rpx;
	text-align: center;
	padding: 16rpx 0;
}
.bottom-list .footer {
	color: red;
	font-size: 24rpx;
	padding: 30rpx 0 10rpx;
}

